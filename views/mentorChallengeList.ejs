<% include ./partials/header%>
<% include ./partials/mentorGoHome%>
<div class="col-md-12">
  <% if(noMatch !== null) {%>
  <h3>
    <%= noMatch %>
  </h3>
  <p>
  </p>
  <% } %>
</div>
<div class = "scrollit">
<table class="">
  <tr class="thead-dark">
    <th>Title</th>
    <th>Category</th>
    <th>Description</th>
    <th>Mentor Name</th>
    <th>Mentor Username</th>
    <th>Accepted Team</th>
    <th style="min-width: 200px;">Applicants</th>
  </tr>
  <% challenges.forEach(function(challenge){
                challenge.mentorChallenges.forEach(function(chall) { %>
  <tr class="table-row">
    <td>
      <%= chall.title %>
    </td>
    <td>
      <%= chall.category %>
    </td>
    <td>
      <%= chall.description %>
    </td>
    <td>
      <%= challenge.name %>
    </td>
    <td>
      <%= challenge.username %>
    </td>
    <td>
      <%= chall.teamusername %>
    </td>
    <td style="min-width: 200px;">
      <ul>

        <% for(var i = 0; i < chall.applicants.length; i++){ %>
        <li>
          <%= chall.applicants[i];%>
          <form action="/mentor/<%= challenge._id%>/view/<%=chall._id%>/<%=chall.applicants[i]%>" method="GET">
            <button class="btn btn-info btn-sm">View</button>
          </form>
        </li>
        <% } %>
      </ul>
    </td>
  </tr>
  <% }); %>
  <% }); %>
</table>
</div>
<% include ./partials/footer%>