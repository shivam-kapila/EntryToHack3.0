<script>
  function updateYear() {
    var roll = $('#roll').val();
    var map = new Map();
    map.set(1, '1');
    map.set(2, '2');
    map.set(3, '3');
    map.set(4, '4');
    map.set(5, '5');
    if ((roll.toLowerCase().search('iiitu') !== -1) && (roll.length === 10)) {
        $('#year').val(map.get(19 - parseInt(roll.split('')[5] + roll.split('')[6])));
        $('#year-hidden').val(map.get(19 - parseInt(roll.split('')[5] + roll.split('')[6])));
    } else if (roll.length === 5 || (roll.length === 7 && roll.toLowerCase().search('mi') !== -1)) {
        $('#year').val(map.get(19 - parseInt(roll.split('')[0] + roll.split('')[1])));
        $('#year-hidden').val(map.get(19 - parseInt(roll.split('')[0] + roll.split('')[1])));
    } else {
        $('#year').val('check-roll');
    }
}
</script>
