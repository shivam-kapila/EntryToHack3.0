         <input type="text" name="username" placeholder="User Name" required class="form-control">
        </div>
        <div class="form-input col col-md-6">
         <label for="email" class="required">Password</label>
          <input type="password" name="password" placeholder="Password" required class="form-control">
        </div>
       </div>



        <div class="row">
            <div class="form-input col col-12 col-md-4">
         <label for="email" class="required">Enter Team Username</label>
